# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username
BOT_WEBHOOK_URL=https://your-app.render.com/webhook

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/zultra_bot
# For SQLite (development): sqlite+aiosqlite:///./zultra_bot.db

# Redis Configuration (Optional but recommended)
REDIS_URL=redis://localhost:6379/0

# Security
ENCRYPTION_KEY=your_32_byte_base64_encryption_key_here
SECRET_KEY=your_secret_key_for_sessions

# AI Providers (Optional - users can add their own)
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key

# Bot Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
MAX_WORKERS=4

# Admin Configuration
OWNER_IDS=123456789,987654321
ADMIN_IDS=111222333,444555666

# Rate Limiting
RATE_LIMIT_MESSAGES=30
RATE_LIMIT_WINDOW=60
AI_RATE_LIMIT=10
AI_RATE_WINDOW=300

# Webhook Configuration (for production)
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8000
WEBHOOK_PATH=/webhook