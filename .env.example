# ===================================
# ZULTRA BOT v2.0 - Configuration
# ===================================

# ===================================
# BOT CONFIGURATION (REQUIRED)
# ===================================
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username
BOT_WEBHOOK_URL=https://your-domain.com/webhook

# ===================================
# ENVIRONMENT SETTINGS
# ===================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ===================================
# DATABASE CONFIGURATION
# ===================================
# Development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./zultra_bot.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/zultra_bot

# ===================================
# CACHE CONFIGURATION (Optional)
# ===================================
# Redis URL (for caching and session management)
REDIS_URL=redis://localhost:6379/0

# ===================================
# SECURITY SETTINGS
# ===================================
# Auto-generated encryption key (leave empty for auto-generation)
ENCRYPTION_KEY=

# Secret key for security (change in production)
SECRET_KEY=change-this-secret-key-in-production

# ===================================
# ADMIN CONFIGURATION
# ===================================
# Comma-separated list of owner user IDs
OWNER_IDS=123456789,987654321

# Comma-separated list of admin user IDs
ADMIN_IDS=111111111,222222222

# ===================================
# AI PROVIDER CONFIGURATION
# ===================================
# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# ===================================
# RATE LIMITING SETTINGS
# ===================================
# General rate limiting (messages per window)
RATE_LIMIT_MESSAGES=30
RATE_LIMIT_WINDOW=60

# AI rate limiting (requests per window)
AI_RATE_LIMIT=10
AI_RATE_WINDOW=300

# ===================================
# PERFORMANCE SETTINGS
# ===================================
# Maximum worker threads
MAX_WORKERS=4

# Database connection pool size
CONNECTION_POOL_SIZE=10

# ===================================
# WEBHOOK CONFIGURATION
# ===================================
# Webhook settings (for production deployment)
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8000
WEBHOOK_PATH=/webhook

# ===================================
# FEATURE FLAGS
# ===================================
# Enable/disable specific features
ENABLE_AI_FEATURES=true
ENABLE_ADMIN_FEATURES=true
ENABLE_FUN_FEATURES=true
ENABLE_UTILITY_FEATURES=true

# ===================================
# EXTERNAL SERVICES (Optional)
# ===================================
# Weather API (OpenWeatherMap)
WEATHER_API_KEY=your_weather_api_key_here

# Translation API
TRANSLATION_API_KEY=your_translation_api_key_here

# URL Shortener API
URL_SHORTENER_API_KEY=your_url_shortener_api_key_here

# ===================================
# LOGGING CONFIGURATION
# ===================================
# Log rotation settings
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# ===================================
# BACKUP CONFIGURATION
# ===================================
# Backup settings (for SQLite)
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION=7

# ===================================
# MONITORING & HEALTH CHECK
# ===================================
# Health check endpoint
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# ===================================
# DEVELOPMENT SETTINGS
# ===================================
# Development mode settings
DEV_MODE=false
TEST_MODE=false

# ===================================
# PRODUCTION DEPLOYMENT
# ===================================
# Production-specific settings
PRODUCTION_MODE=false
SENTRY_DSN=your_sentry_dsn_here
PORT=8000
HOST=0.0.0.0

# ===================================
# PLATFORM-SPECIFIC SETTINGS
# ===================================
# Railway
RAILWAY_STATIC_URL=
RAILWAY_VOLUME_MOUNT_PATH=

# Render
RENDER_EXTERNAL_URL=

# Vercel
VERCEL_URL=

# Heroku
HEROKU_APP_NAME=